{
  "name": "mist-engine-fvtt",
  "version": "2.0.0",
  "description": "CSS compiler for the MistEngine system",
  "scripts": {
    "build": "sass src/scss/mist-engine-fvtt.scss css/mist-engine-fvtt.css --style=expanded --no-source-map",
    "watch": "sass src/scss/mist-engine-fvtt.scss css/mist-engine-fvtt.css --style=expanded --source-map --watch",
    "unpack-compendium": "node  src/commands/unpack.mjs",
    "pack-compendium": "node  src/commands/pack.mjs"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "author": "Asacolips",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@foundryvtt/foundryvtt-cli": "^3.0.3"
  },
  "devDependencies": {
    "sass": "^1.53.0"
  }
}
<form class="roll-dialog-container scrollable">
    <div class="selected-tags-container flexcol">
        <label class="resource-label">You selected:</label>
        {{#each selectedTags}}
        <div class="tag {{#if this.positive}}positive{{else}}negative{{/if}}">{{#if this.toBurn}}ðŸ”¥ {{/if}}{{this.name}} {{#if (gt this.value 0)}}-{{this.value}}{{/if}}</div>
        {{/each}}
    </div>
    <div class="selected-tags-container flexcol">
        <label class="resource-label">Story Tags / Status selected:</label>
        {{#each selectedStoryTags}}
        <div class="tag {{#if this.positive}}positive{{else}}negative{{/if}}">{{#if this.toBurn}}ðŸ”¥ {{/if}}{{this.name}} {{#if (gt this.value 0)}}-{{this.value}}{{/if}}</div>
        {{/each}}
    </div>
    <div class="selected-tags-container flexcol">
        <label class="resource-label">GM selected:</label>
        {{#each selectedGmTags}}
        <div class="tag {{#if this.positive}}positive{{else}}negative{{/if}}">{{#if this.toBurn}}ðŸ”¥ {{/if}}{{this.name}} {{#if (gt this.value 0)}}-{{this.value}}{{/if}}</div>
        {{/each}}
    </div>
     <div class="form-group">
        <label class="resource-label">Positive Mods:</label>
        <div class="flexrow">
            <i class="fa-solid fa-minus" style="text-align:center" id="button-positive-minus"></i>
            <input type="number" name="positiveValue" value="0" data-dtype="Number" id="positiveInput"/>
            <i class="fa-solid fa-plus" style="text-align:center" id="button-positive-plus"></i>
        </div>
    </div>
     <div class="form-group">
        <label class="resource-label">Negative Mods:</label>
        <div class="flexrow">
            <i class="fa-solid fa-minus icon-hover" style="text-align:center" id="button-negative-minus"></i>
            <input type="number" name="negativeValue" value="0" data-dtype="Number" id="negativeInput"/>
            <i class="fa-solid fa-plus icon-hover" style="text-align:center" id="button-negative-plus"></i>
        </div>
    </div>
    <footer class="dialog-footer">
        <button type="button" class="roll-button" data-action="clickedRoll">Roll</button>
    </footer>
</form>
<div class="item-weekness-line flexrow">
    {{#if editMode}}
    <input class="item-editable-stat" data-item-id={{id}} type="text" data-item-stat="system.weeknesstag{{index}}.name"
        value="{{weeknesstag.name}}" placeholder="{{weeknesstag.question}}" title="{{weeknesstag.question}}" title="Weakness" data-source="{{source}}"/>
    {{else}}
        {{#if (tagFilled weeknesstag.name)}}
        <span class="litm-pc-weekness wt-selectable {{#if weeknesstag.selected}}selected{{/if}}"
            data-weeknesstag-index={{index}} data-item-id={{id}} data-source="{{source}}">
            <i class="fa-light fa-angles-down"></i>
            {{weeknesstag.name}}
        </span>
        {{/if}}
    {{/if}}
</div>
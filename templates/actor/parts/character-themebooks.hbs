<div class="themebooks-container {{#unless system.editMode}}themebooks-container-stylized{{/unless}} grid grid-4col grid-themebook-container">
    {{!-- If there are no themebooks, show a message --}}
    {{#if themebooksEmpty}}
    <div class="themebook-container">
        <div class="themebook-style flexcol">
            <div class="empty-message">{{localize "MIST_ENGINE.HELP.NoThemebooksInCharacter"}}</div>
            <div><button class="themekit-button" data-action="openThemekitSelection">{{localize "MIST_ENGINE.THEMEKITS.OpenThemekitSelection"}}</button></div>
        </div>
    </div>
    {{/if}}
    {{!-- Iterate over each themebook and render the partial --}}
    {{#each themebooks as |book id|}}
    {{> 'systems/mist-engine-fvtt/templates/actor/parts/themebook-partial.hbs' themebook=book id=id
    editMode=../system.editMode}}
    {{/each}}
</div>
<div>
    <header class="sheet-header">
        <img class="portrait-img" data-action="editImage" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"
            height="120" />
        <div class="header-fields npc">
            {{#if system.editMode}}
            {{!-- Edit Mode Layout --}}
            <div class="title">
                <h1 class="npc-name"><input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'MIST_ENGINE.PLACEHOLDERS.Name'}}" /></h1>
                <div class="flexcol">
                    <label for="system.difficulty">{{localize "MIST_ENGINE.LABELS.Npc.difficulty"}}</label>
                    <input type="number" name="system.difficulty" value="{{system.difficulty}}" min="0" max="5" />
                </div>
            </div>
            <div class="npc-short-description"><input name="system.shortDescription" type="text"
                    value="{{system.shortDescription}}" placeholder="{{localize 'MIST_ENGINE.PLACEHOLDERS.ShortDescription'}}" /></div>
            {{else}}
            {{!-- Normal Layout --}}
            <div class="title">
                <h1 class="npc-name">{{actor.name}}</h1>
                <div class="difficulty-icons">
                    {{#times system.difficulty}}
                    <img src="systems/mist-engine-fvtt/assets/icons/icon-litm-difficulty.webp"
                        title="{{localize 'MIST_ENGINE.LABELS.Npc.difficulty'}}" />
                    {{/times}}
                </div>
            </div>
            <div class="npc-short-description">{{{textWithTags system.shortDescription}}}</div>
            {{/if}}
        </div>
    </header>
</div>
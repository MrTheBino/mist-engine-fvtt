<div class="themebook-container" data-id="{{id}}">
    <div class="themebook-style litm-quintessence flexcol">
        <h2 class="theme-name">Quintessences

            {{#if editMode}}
            <a data-action="createItem" data-type="quintessence" >
                <i class='fas fa-plus'></i>
            </a>
            {{else}}
            <i class="themebook-icon litm-quintessence"></i>
            {{/if}}
        </h2>
        <div>
            {{#each quintessences as |entry index|}}
            <div class="form-group flexrow item-powertag-line" >
                {{#if ../editMode}}
                    <span class="litm-pc-quintessence" data-tooltip-html="{{{itemTooltipHTML entry}}}">{{entry.name}}</span>
                    <a class="themebook-icon" data-action="editItem" data-item-id="{{entry.id}}">
                        <i class='fas fa-pencil'></i>
                    </a>
                    <a class="themebook-icon" data-action="deleteItem" data-item-id="{{entry.id}}">
                        <i class='fas fa-trash'></i>
                    </a>
                {{else}}
                    <span class="litm-pc-quintessence" data-tooltip-html="{{{itemTooltipHTML entry}}}">{{entry.name}}</span>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</div>
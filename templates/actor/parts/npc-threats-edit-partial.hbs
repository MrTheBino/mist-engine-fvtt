<fieldset>
    <legend>{{localize 'MIST_ENGINE.LABELS.ThreatsAndConsequences'}} <a data-action="createThreatAndConsequence"><i class='fas fa-plus'></i></a>
    </legend>
    {{!-- <div class="form-group"> --}}
        {{#each system.threatsAndConsequences as |entry index|}}
        <div class="threat-and-consequence-container-entry">
            <div class="form-group flexcol">
                <div class="form-group flexrow" style="margin-bottom: 5px;">
                    <input type="text" class="npc-updatable-npc-array-stat" data-index="{{index}}"
                        data-array="threatsAndConsequences" data-key="name" id="limit-{{index}}"
                        name="system.threatsAndConsequences[{{index}}].name" value="{{entry.name}}"
                        placeholder="{{localize 'MIST_ENGINE.PLACEHOLDERS.Name'}}" />
                    <div class="trash-icon-container">
                        <a class="" data-action="deleteThreatAndConsequence" data-index="{{index}}">
                            <i class='fas fa-trash'></i>
                        </a>
                    </div>
                </div>
                <input type="text" class="npc-updatable-npc-array-stat" data-index="{{index}}"
                    data-array="threatsAndConsequences" data-key="description" id="limit-{{index}}"
                    name="system.threatsAndConsequences[{{index}}].description" value="{{entry.description}}"
                    placeholder="{{localize 'MIST_ENGINE.PLACEHOLDERS.Description'}}" />
            </div>
            <fieldset>
                <legend>{{localize 'MIST_ENGINE.LABELS.Consequences'}} <a data-action="createThreatAndConsequenceEntry" data-index="{{index}}"><i
                            class='fas fa-plus'></i></a></legend>
                {{#each entry.list as |listEntry listIndex|}}
                <div class="threat-entry-container form-group flexrow">
                    <input type="text" class="npc-updatable-threat-entry-stat value-input-huge"
                        id="npc-thread-list-{{index}}-{{listIndex}}" data-index="{{index}}"
                        data-listIndex="{{listIndex}}" value="{{listEntry}}" placeholder="" />
                    <div class="trash-icon-container">
                        <a class="" data-action="deleteThreatAndConsequenceEntry" data-index="{{index}}"
                            data-listIndex="{{listIndex}}">
                            <i class='fas fa-trash'></i>
                        </a>
                    </div>
                </div>
                {{/each}}
            </fieldset>
        </div>
        <hr />
        {{/each}}
        {{!--
    </div> --}}
</fieldset>
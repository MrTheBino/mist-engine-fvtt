<fieldset>
    <legend>Tags &amp; Statuses <a data-action="createTagOrStatus"><i class='fas fa-plus'></i></a></legend>
    <div class="form-group">
        <div class="form-group flexrow">
            <label>Name</label>
            <label>Value</label>
            <label>Symbol</label>
        </div>
        {{#each system.tags_and_statuses as |entry index|}}
            <div class="form-group flexrow">
                <input type="text" class="npc-updatable-npc-array-stat" data-index="{{index}}" data-array="tags_and_statuses" data-key="name" id="limit-{{index}}" name="system.tags_and_statuses[{{index}}].name" value="{{entry.name}}" placeholder="Name"/>
                <input type="number" class="npc-updatable-npc-array-stat" data-index="{{index}}" data-array="tags_and_statuses" data-key="value" id="limit-{{index}}" name="system.tags_and_statuses[{{index}}].value" value="{{entry.value}}" placeholder="0"/>
                <select class="npc-updatable-npc-array-stat" data-index="{{index}}" data-array="tags_and_statuses" data-key="symbol" id="limit-{{index}}" name="system.tags_and_statuses[{{index}}].symbol">
                    <option value="" {{#if (eq entry.symbol "")}}selected{{/if}}>-</option>
                    <option value="adventure" {{#if (eq entry.symbol "adventure")}}selected{{/if}}>Adventure</option>
                    <option value="origin" {{#if (eq entry.symbol "origin")}}selected{{/if}}>Origin</option>
                    <option value="variable" {{#if (eq entry.symbol "variable")}}selected{{/if}}>Variable</option>
                    <option value="greatness" {{#if (eq entry.symbol "greatness")}}selected{{/if}}>Greatness</option>
                </select>
                <a data-action="deleteTagOrStatus" data-index="{{index}}">
                        <i class='fas fa-trash'></i>
                    </a>
            </div>
        {{/each}}
    </div>
</fieldset>
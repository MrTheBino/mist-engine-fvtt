<div class="themebook-container">
    <div class="themebook-style fellowship flexcol">
        <div class="powertags-container">
            {{> "systems/mist-engine-fvtt/templates/actor/parts/themebook-powertag-line.hbs" index=1 id=themebook._id
            powertag=system.powertag1 editMode=true firstTag=true}}
            {{> "systems/mist-engine-fvtt/templates/actor/parts/themebook-powertag-line.hbs" index=2 id=themebook._id
            powertag=system.powertag2 editMode=true}}
            {{> "systems/mist-engine-fvtt/templates/actor/parts/themebook-powertag-line.hbs" index=3 id=themebook._id
            powertag=system.powertag3 editMode=true}}
            {{> "systems/mist-engine-fvtt/templates/actor/parts/themebook-powertag-line.hbs" index=4 id=themebook._id
            powertag=system.powertag4 editMode=true}}
            {{> "systems/mist-engine-fvtt/templates/actor/parts/themebook-powertag-line.hbs" index=5 id=themebook._id
            powertag=system.powertag5 editMode=true}}
            {{> "systems/mist-engine-fvtt/templates/actor/parts/themebook-powertag-line.hbs" index=6 id=themebook._id
            powertag=system.powertag6 editMode=true}}
            {{> "systems/mist-engine-fvtt/templates/actor/parts/themebook-powertag-line.hbs" index=7 id=themebook._id
            powertag=system.powertag7 editMode=true}}

            {{> "systems/mist-engine-fvtt/templates/actor/parts/themebook-weekness-line.hbs" index=1 id=themebook._id
            weeknesstag=system.weeknesstag1 editMode=true}}
            {{> "systems/mist-engine-fvtt/templates/actor/parts/themebook-weekness-line.hbs" index=2 id=themebook._id
            weeknesstag=system.weeknesstag2 editMode=true}}
        </div>
        <div class="quest-container">
                <textarea class="item-editable-stat quest-textarea" data-item-id={{themebook._id}} data-item-stat="system.quest" placeholder="Quest/Goal">{{themebook.system.quest}}</textarea>
        </div>
        <div class="development-container flexrow">
            {{> "systems/mist-engine-fvtt/templates/actor/parts/development-partial.hbs" name="Abandon" id=themebook._id key="system.abandon" value=themebook.system.abandon}}
            {{> "systems/mist-engine-fvtt/templates/actor/parts/development-partial.hbs" name="Improve" id=themebook._id key="system.improve" value=themebook.system.improve}}
            {{> "systems/mist-engine-fvtt/templates/actor/parts/development-partial.hbs" name="Milestone" id=themebook._id key="system.milestone" value=themebook.system.milestone}}
        </div>
    </div>

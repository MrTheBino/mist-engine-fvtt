<div class="item-special-improvement-line flexcol" style="gap: 0.25em; margin-bottom: 0.5em;">
    <div class="flexrow" style="gap: 0.5em;">
        <input type="text" name="system.specialImprovements.{{index}}.name" value="{{imp.name}}" placeholder="Special Improvement Name" />
        {{#if showDelete}}
        <a style="flex-grow: 0.1;" class="themebook-icon" data-action="deleteSpecialImprovement" data-index="{{index}}">
            <i class='fas fa-trash'></i>
        </a>
        {{/if}}
    </div>
    <textarea rows="2" style="flex-grow: 1;" 
        name="system.specialImprovements.{{index}}.description" placeholder="Special Improvement Description">{{imp.description}}</textarea>
</div>